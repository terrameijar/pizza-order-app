{{extend 'layout.html'}}
<h1>Shopping Cart</h1>
<p>
    Items in Cart
</p>
<table class='table table-striped table-hover'>
    {{for x in rows:}}
    <tr>
        <td>{{x.quantity}}</td>
        <td>{{=x.description}}</td>
        <td><a href='delete/x.id'>Delete</a></td>        
    </tr>
    {{pass}}
</table>
<br/>
&nbsp;&nbsp;&nbsp;<a href='view'>Continue Ordering</a>
<button>Check Out</button>
