{{extend 'layout.html'}}
<h1>My Posts</h1>
<hr/>
{{ for x in rows: }}
<div class='row'>
    <img class='col col-lg-4 col-md-6 col-sm-6 col-xs-12' src='{{=x.product_image}}' alt='image' />
    <div class='col col-lg-8 col-md-6 col-sm-6 col-xs-12'>
         <p class='lead'>
            <b>{{=x.product_name}}</b> 
        </p>
        <p>
            {{=x.product_price}}
        </p>
        <p>
            <a href='update/{{=x.id}}'>Update</a>
        </p>
        <p>
            {{=x.description}}
        </p>
    </div>
</div>
{{pass}}
